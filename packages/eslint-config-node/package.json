{
  "name": "@jmlweb/eslint-config-node",
  "version": "2.0.0",
  "description": "ESLint configuration for Node.js projects with TypeScript, extending base config with Node.js-specific rules",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "node ../../scripts/validate-package.mjs && pnpm build"
  },
  "keywords": [
    "code-quality",
    "eslint",
    "eslint-config",
    "linting",
    "node",
    "nodejs",
    "typescript"
  ],
  "author": "jmlweb",
  "license": "MIT",
  "repository": "jmlweb/tooling.git",
  "bugs": "https://github.com/jmlweb/tooling/issues",
  "homepage": "https://github.com/jmlweb/tooling/tree/main/packages/eslint-config-node#readme",
  "engines": {
    "node": ">=20.11.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@eslint/js": "^9.0.0",
    "@jmlweb/eslint-config-base": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "globals": "^15.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@jmlweb/eslint-config-base": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jmlweb/eslint-config-base": "workspace:*",
    "@jmlweb/tsconfig-internal": "workspace:*",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.34.1"
  }
}
