{
  "name": "@jmlweb/tsconfig-astro",
  "version": "1.1.3",
  "description": "TypeScript configuration for Astro projects with JSX support and modern defaults",
  "main": "tsconfig.json",
  "exports": {
    ".": "./tsconfig.json"
  },
  "files": [
    "tsconfig.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prepublishOnly": "node ../../scripts/validate-package.mjs"
  },
  "keywords": [
    "astro",
    "config",
    "jsx",
    "strict",
    "tsconfig",
    "type-checking",
    "typescript"
  ],
  "author": "jmlweb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmlweb/tooling.git"
  },
  "bugs": "https://github.com/jmlweb/tooling/issues",
  "homepage": "https://github.com/jmlweb/tooling/tree/main/packages/tsconfig-astro#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@jmlweb/tsconfig-base": "workspace:*",
    "astro": ">=4.0.0",
    "typescript": ">=5.0.0"
  }
}
