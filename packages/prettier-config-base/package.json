{
  "name": "@jmlweb/prettier-config-base",
  "version": "0.0.2",
  "description": "Base Prettier configuration for jmlweb projects",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "prettier",
    "prettier-config",
    "code-formatter"
  ],
  "author": "jmlweb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmlweb/tooling.git"
  },
  "bugs": {
    "url": "https://github.com/jmlweb/tooling/issues"
  },
  "homepage": "https://github.com/jmlweb/tooling/tree/main/packages/prettier-config-base#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "devDependencies": {
    "@jmlweb/tsconfig-internal": "workspace:*",
    "prettier": "^3.3.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
