{
  "name": "@jmlweb/postcss-config",
  "version": "0.0.1",
  "description": "PostCSS configuration for jmlweb projects with Tailwind CSS and Autoprefixer",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "node ../../scripts/validate-package.mjs && pnpm build"
  },
  "keywords": [
    "autoprefixer",
    "postcss",
    "postcss-config",
    "tailwind",
    "tailwindcss"
  ],
  "author": "jmlweb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmlweb/tooling.git"
  },
  "bugs": "https://github.com/jmlweb/tooling/issues",
  "homepage": "https://github.com/jmlweb/tooling/tree/main/packages/postcss-config#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@jmlweb/tsconfig-internal": "workspace:*",
    "@types/node": "^22.9.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^3.4.15",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
