{
  "name": "@jmlweb/commitlint-config",
  "version": "2.0.2",
  "description": "Shared commitlint configuration for enforcing Conventional Commits",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "node ../../scripts/validate-package.mjs && pnpm build"
  },
  "keywords": [
    "commitlint",
    "commitlint-config",
    "conventional-commits",
    "git",
    "lint"
  ],
  "author": "jmlweb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmlweb/tooling.git"
  },
  "bugs": "https://github.com/jmlweb/tooling/issues",
  "homepage": "https://github.com/jmlweb/tooling/tree/main/packages/commitlint-config#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@commitlint/cli": ">=19.0.0",
    "@commitlint/config-conventional": ">=19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@jmlweb/tsconfig-internal": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
