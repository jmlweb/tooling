{
  "name": "@jmlweb/vite-config",
  "version": "0.1.0",
  "description": "Base Vite configuration for jmlweb projects with TypeScript support, build optimization, and optional React integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "node ../../scripts/validate-package.mjs && pnpm build"
  },
  "keywords": [
    "build",
    "bundler",
    "config",
    "vite",
    "vite-config"
  ],
  "author": "jmlweb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmlweb/tooling.git"
  },
  "bugs": "https://github.com/jmlweb/tooling/issues",
  "homepage": "https://github.com/jmlweb/tooling/tree/main/packages/vite-config#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@vitejs/plugin-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jmlweb/tsconfig-internal": "workspace:*",
    "@vitejs/plugin-react": "^4.3.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^6.0.7"
  }
}
