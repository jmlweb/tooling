{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "tsup.config.ts", "tsconfig.json", "package.json"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**",
        "*.{js,mjs,cjs,ts,tsx,jsx}",
        "eslint.config.*",
        "package.json"
      ]
    },
    "//#lint:root": {},
    "format": {
      "outputs": [],
      "inputs": [
        "**/*.{js,json,md}",
        ".prettierrc*",
        ".prettierignore",
        "prettier.config.*",
        "package.json"
      ]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**",
        "fixtures/**",
        "scripts/**",
        "*.test.*",
        "*.spec.*",
        "vitest.config.*",
        "jest.config.*",
        "package.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
