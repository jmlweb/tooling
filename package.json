{
  "name": "jmlweb-tooling",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "ci": "pnpm validate && pnpm build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "integration:test": "pnpm --filter @jmlweb/integration-tests test",
    "lint": "turbo run lint",
    "lint:root": "eslint .",
    "prepare": "husky",
    "syncpack:check": "syncpack lint",
    "syncpack:fix": "syncpack fix-mismatches && syncpack format",
    "test": "turbo run test",
    "validate": "pnpm format --check && pnpm lint:root && pnpm lint && pnpm syncpack:check",
    "validate:docs": "node scripts/validate-docs.mjs",
    "validate:packages": "node scripts/validate-all-packages.mjs",
    "version": "changeset version",
    "version:prerelease": "changeset version --snapshot prerelease",
    "version:snapshot": "changeset version --snapshot"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@jmlweb/eslint-config-base-js": "workspace:*",
    "@jmlweb/prettier-config-base": "workspace:*",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "syncpack": "^13.0.4",
    "tsup": "^8.5.1",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.26.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
